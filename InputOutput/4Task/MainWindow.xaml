<Window x:Class="_4Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4Task"
        mc:Ignorable="d"
        Title="Isolated Storage" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBox x:Name="InputTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Зберегти" Click="SaveButton_Click" Margin="5" Width="100"/>
            <Button Content="Зчитати" Click="LoadButton_Click" Margin="5" Width="100"/>
        </StackPanel>
        <TextBlock x:Name="StatusTextBlock" Foreground="Gray" Margin="5"/>
    </StackPanel>
</Window>
